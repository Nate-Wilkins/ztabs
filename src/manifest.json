{
  "name": "{{name}}",
  "version": "{{version}}",
  "description": "{{description}}",
  "manifest_version": 3,
  "icons": {
    "128": "./icon_128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://*/*", "http://*/*"],
      "js": ["inject.js", "client.js"],
      "run_at": "document_start"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [ "client/client.js" ],
      "matches": [ "https://*/*" ]
    }
  ],
  "action": {},
  "host_permissions": ["<all_urls>"],
  "permissions": [
    "scripting",
    "activeTab",
    "tabs"
  ],
  "commands": {
    "toggle-popup-mode": {
      "suggested_key": {
        "default": "Ctrl+Shift+L"
      },
      "description": "Show/hide navigation bar"
    }
  }
}
